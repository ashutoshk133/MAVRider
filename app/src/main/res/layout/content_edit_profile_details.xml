<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techwarriors.mav_rider.EditProfileDetails"
    tools:showIn="@layout/activity_edit_profile_details">

    <EditText
        android:id="@+id/eteditname"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/eteditphone"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eteditname"
        android:layout_below="@+id/eteditname"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:maxLength="20"
        android:inputType="number"
        android:hint="Phone" />

    <EditText
        android:id="@+id/eteditsecque"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eteditphone"
        android:layout_below="@+id/eteditphone"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Security Question" />

    <EditText
        android:id="@+id/eteditsecans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eteditsecque"
        android:layout_below="@+id/eteditsecque"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Security Answer" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b7dfff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onUpdate"
        android:text="Update"
        android:textColor="#000000"/>
</RelativeLayout>
